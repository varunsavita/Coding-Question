/*
    Find the count of vowels and consonants in a string.
    -> The ASCII value of the null character is zero. 
    -> A ASCII value 65 and a ASCII value 65 + 32
*/

#include<stdio.h>

void findCountOfChar(char str[]){

    int vowelCount = 0;
    int consonantCount = 0;
    int spaceCount = 0;
    while(*str){
        if (*str >= 'a' && *str <= 'z'){
            *str -=32;
        }

        if(*str == 'A' || *str == 'E' || *str == 'I' || *str == 'O' || *str == 'U'){
            vowelCount++;
        }
        else if(*str == 32) 
            spaceCount++;
        else if(*str >= 'A' && *str <= 'Z') { 
            consonantCount++;
        }

        str++;
    }
    printf("ChvowelCountar occurs %d times, consonantCount occurs %d times, spaceCount occurs %d times   in the string.\n", vowelCount, consonantCount, spaceCount);
}

int main(){
    char str[] ="varun varun varun varun savita savita savita savita Kumar kumar Kumar kumar";
    //char str[] = "zxcvbnmlkjhgfdsaqwertyuiop";
    findCountOfChar(str);
    return 0;
}
